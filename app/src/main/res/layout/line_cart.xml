<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="10dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgProductCart"
        android:layout_weight="3"
        android:src="@mipmap/ic_launcher"
        android:layout_width="0dp"
        android:layout_height="120dp"></ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNameCart"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/txtvPriceCart"
            android:layout_marginTop="10dp"
            android:text="Giá sản phẩm"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout

            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:id="@+id/btnMinusCart"
                android:backgroundTint="#C5C4C1"
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="wrap_content"></Button>

            <Button
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:id="@+id/btnValueCart"
                android:layout_weight="1.5"
                android:backgroundTint="#FFFFFF"
                android:padding="0dp"
                android:textColor="#000000"
                android:text="Số lượng sản phẩm"
                android:layout_width="40dp"
                android:layout_height="wrap_content"></Button>

            <Button
                android:textColor="#000000"
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:id="@+id/btnPlusCart"
                android:backgroundTint="#C5C4C1"
                android:text="+"
                android:layout_width="50dp"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>